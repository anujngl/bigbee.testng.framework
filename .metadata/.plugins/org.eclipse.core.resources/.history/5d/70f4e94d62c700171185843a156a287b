package com.sample.test;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.ie.InternetExplorerDriver;
import org.testng.Assert;
import org.testng.annotations.AfterSuite;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Parameters;
import org.testng.annotations.Test;
import com.configuration.ConfigurationReader;
import com.relevantcodes.extentreports.ExtentReports;
import com.relevantcodes.extentreports.ExtentTest;
import com.relevantcodes.extentreports.LogStatus;

public class SampleTestngTest {
	
	ExtentReports report;
	ExtentTest logger;
	WebDriver driver;
	String MyCurrentDirectory;
	@BeforeTest
	@Parameters ({"browser"})
	public void launchBrowser(String browserName)
	{
		ConfigurationReader Config = new ConfigurationReader();
		MyCurrentDirectory = Config.getCurrentDir();
		report = new ExtentReports(MyCurrentDirectory + "target/Reports/SampleExtentReport.html");
		logger = report.startTest("Launch Facebook Application");
		if (browserName.equalsIgnoreCase("firefox")){
			System.setProperty("webdriver.gecko.driver", Config.getFirefoxDriverFilePath());
			driver = new FirefoxDriver();
		}else if(browserName.equalsIgnoreCase("chrome")){
			System.setProperty("webdriver.chrome.driver", Config.getChromeDriverFilePath());
			driver = new ChromeDriver();
		}else if (browserName.equalsIgnoreCase("IE")){
			System.setProperty("webdriver.ie.driver", Config.getIEDriverFilePath());
			driver = new InternetExplorerDriver();
		}
		driver.manage().window().maximize();
		logger.log(LogStatus.INFO, "Browser Launched");
	}
	@Test
	public void launchFacebook()
	{
		driver.get("https://www.facebook.com");
		Assert.assertTrue(driver.findElement(By.id("email")).isDisplayed());
		logger.log(LogStatus.PASS, "Application is successfully launched");
	}
	
	@AfterTest
	public void closeBrowser(){
		driver.quit();
	}
	
	@AfterSuite
	public void OpenReport()
	{
		report.endTest(logger);
		report.flush();
		try {
			Runtime.getRuntime().exec(MyCurrentDirectory + "/target/Reports/SampleExtentReport.html");
		} catch (Exception e) {
			System.out.println("Exception is "+e.getMessage());
		}
	}
}